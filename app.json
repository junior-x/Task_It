{
  "expo": {
    "name": "Task It",
    "slug": "Task It",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#291F30",
      "description": "Simple and cool app to manage you daily tasks and keep on mind the most important things in your day! Created to only focus in the important things for you. :)"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIndentifier": "com.vampyrsoda.task_it"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF",
        "package": "com.vampyrsoda.task_it"

      }
    },
    "expo": {
      "androidStatusBar": {
        "backgroundColor": "#1E1227",
        "translucent": false
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
